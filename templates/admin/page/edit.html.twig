{% extends 'admin/base.html.twig' %}

{% block title %}Edit Page{% endblock %}

{% block body %}
    <div class="content-header">
        <h1 class="text-dark">Edit Page</h1>
    </div>

    <div class="content px-2">
        <div class="card card-primary card-outline">
            <div class="card-body">
                {% if form_type == 'search' %}
                    {{ include('admin/page/forms/new_search_form.html.twig', {'button_label': 'Update'}) }}
                {% elseif form_type == 'static' %}
                    {{ include('admin/page/forms/_form.html.twig', {'button_label': 'Update'}) }}
                {% else %}
                    {{ include('admin/page/forms/new_landing_form.html.twig', {'button_label': 'Update'}) }}
                {% endif %}
            </div>
        </div>

        {{ include('admin/page/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% extends 'admin/base.html.twig' %}

{% block title %}New Page{% endblock %}

{% block body %}
    {% set newPageData = {
        static: {
            title: 'Create new Static Page',
            formTemplate: 'admin/page/forms/_form.html.twig',
        },
        search: {
            title: 'Create new Search Page',
            formTemplate: 'admin/page/forms/new_search_form.html.twig',
        },
        landing: {
            title: 'Create new Landing Page',
            formTemplate: 'admin/page/forms/new_landing_form.html.twig',
        },
    } %}

    <div class="content-header">
        <h1 class="text-dark">{{ newPageData[form_type].title }}</h1>
    </div>

    <div class="content px-2">
        <div class="card card-primary card-outline">
            <div class="card-body">
                {{ include(newPageData[form_type].formTemplate) }}
            </div>
        </div>
    </div>
{% endblock %}

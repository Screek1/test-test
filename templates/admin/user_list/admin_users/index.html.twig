{% extends 'admin/base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="content-header">
        <h1 class="text-dark">Users List</h1>
    </div>

    <div class="content px-2">
        <div class="card card-primary card-outline">
            <div class="card-body">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="bg-secondary">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td class="align-middle">{{ user.id }}</td>
                            <td class="align-middle">{{ user.username }}</td>
                            <td class="align-middle">
                                <a class="card-link" href="{{ path('admin_edit', {'id': user.id}) }}" hreflang="en">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="card-link" href="{{ path('admin_show', {'id': user.id}) }}" hreflang="en">
                                    <i class="fa fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}

                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <a class="btn btn-primary" href="{{ path('admin_new') }}" hreflang="en">Create new</a>
    </div>
{% endblock %}
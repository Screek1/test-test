{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Welcome in User profile! âœ…</h1>
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}"
                                                                 hreflang="en">Logout</a>
            </div>
        {% endif %}

        <ul>
            <li>Your controller at <code><a
                            href="{{ '/mount/space-1/.user/domains/viksemenov20/src/Controller/UserController.php'|file_link(0) }}"
                            hreflang="en">src/Controller/UserController.php</a></code></li>
            <li>Your template at <code><a
                            href="{{ '/mount/space-1/.user/domains/viksemenov20/templates/user/index.html.twig'|file_link(0) }}"
                            hreflang="en">templates/user/index.html.twig</a></code></li>
        </ul>
    </div>

    <h1>Frontend users list</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" hreflang="en">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" hreflang="en">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>

{% endblock %}
